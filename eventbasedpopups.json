      "frequencyrule": [
        {
          "@uniquename": "NONE_PREMIUM",
          "timeframes": {
            "timeframe": [
              {
                "@range": "1-2",
                "@minutes": "15"
              },
              {
                "@range": "2-3",
                "@minutes": "30"
              },
              {
                "@range": "3-4",
                "@minutes": "45"
              }
            ]
          },
          "conditions": {
            "not": {
              "IfHasPremium": null
            }
          }
        },
        {
          "@uniquename": "SMALL_PREMIUM",
          "timeframes": {
            "timeframe": {
              "@range": "1-2",
              "@minutes": "15"
            }
          },
          "conditions": {
            "IfHasPremium": null,
            "IfHasPremiumDays": {
              "@operation": "less",
              "@value": "7"
            },
            "not": {
              "IfHasRecurringSubscription": null
            }
          }
        },
        {
          "@uniquename": "BIG_PREMIUM",
          "timeframes": {
            "timeframe": {
              "@range": "1-2",
              "@minutes": "15"
            }
          },
          "conditions": {
            "or": {
              "IfHasPremiumDays": {
                "@operation": "greaterOrEqual",
                "@value": "7"
              },
              "IfHasRecurringSubscription": null
            }
          }
        }
      ]
